<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formato de papel personalizado para el talonario -->
        <record id="paperformat_talonario" model="report.paperformat">
            <field name="name">Talonario La Venezolana</field>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line">false</field>
            <field name="header_spacing">0</field>
            <field name="dpi">96</field>
        </record>

        <!-- Reporte del Carnet RCV -->
        <record id="action_report_carnet_rcv" model="ir.actions.report">
            <field name="name">Carnet RCV</field>
            <field name="model">poliza.seguro</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">LaVenezolana16.report_talonario_template</field>
            <field name="report_file">LaVenezolana16.report_talonario_template</field>
            <field name="binding_model_id" ref="model_poliza_seguro"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="LaVenezolana16.paperformat_talonario"/>
        </record>

        <!-- Template del talonario -->
        <template id="report_talonario_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="poliza">
                    <div class="page">
                        <style>
                            @page {
                                size: A4;
                                margin: 5mm;
                            }
                            body {
                                font-family: Arial, sans-serif;
                                font-size: 9px;
                                line-height: 1.1;
                                margin: 0;
                                padding: 0;
                            }
                            .talonario-container {
                                width: 100%;
                                border: 2px solid #000;
                                margin-bottom: 10mm;
                                background: white;
                            }
                            .header-section {
                                background: #00bcd4;
                                color: white;
                                padding: 3mm;
                                text-align: center;
                                font-weight: bold;
                                font-size: 11px;
                            }
                            .logo-section {
                                float: left;
                                width: 60px;
                                height: 60px;
                                margin: 5mm;
                            }
                            .logo-circle {
                                width: 50px;
                                height: 50px;
                                border-radius: 50%;
                                background: #00bcd4;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                color: white;
                                font-size: 8px;
                                text-align: center;
                                font-weight: bold;
                            }
                            .company-info {
                                margin-left: 80px;
                                padding: 5mm 0;
                            }
                            .company-name {
                                font-size: 14px;
                                font-weight: bold;
                                color: #333;
                            }
                            .document-title {
                                font-size: 12px;
                                margin-top: 2mm;
                                color: #666;
                            }
                            .control-box {
                                float: right;
                                border: 1px solid #000;
                                padding: 2mm;
                                margin: 5mm;
                                width: 60mm;
                                font-size: 8px;
                            }
                            .control-row {
                                display: flex;
                                margin-bottom: 1mm;
                            }
                            .control-label {
                                width: 20mm;
                                font-weight: bold;
                            }
                            .control-value {
                                flex: 1;
                                border-bottom: 1px solid #000;
                                min-height: 3mm;
                            }
                            .section-header {
                                background: #00bcd4;
                                color: white;
                                padding: 2mm;
                                font-weight: bold;
                                text-align: center;
                                margin-top: 3mm;
                            }
                            .data-section {
                                padding: 3mm;
                                border: 1px solid #ccc;
                            }
                            .data-row {
                                display: flex;
                                margin-bottom: 2mm;
                                align-items: center;
                            }
                            .data-label {
                                font-weight: bold;
                                width: 40mm;
                                font-size: 8px;
                            }
                            .data-value {
                                flex: 1;
                                border-bottom: 1px solid #000;
                                min-height: 4mm;
                                padding: 1mm;
                                margin-right: 5mm;
                            }
                            .vehicle-section {
                                display: flex;
                                gap: 10mm;
                            }
                            .vehicle-left, .vehicle-right {
                                flex: 1;
                            }
                            .signature-section {
                                margin-top: 5mm;
                                display: flex;
                                justify-content: space-between;
                                padding: 3mm;
                            }
                            .signature-box {
                                text-align: center;
                                width: 60mm;
                            }
                            .signature-line {
                                border-top: 1px solid #000;
                                margin-top: 15mm;
                                padding-top: 2mm;
                                font-size: 8px;
                            }
                            .footer-info {
                                background: #f0f0f0;
                                padding: 3mm;
                                font-size: 7px;
                                text-align: justify;
                                border-top: 1px solid #ccc;
                            }
                            .rcv-cards {
                                display: flex;
                                gap: 5mm;
                                margin-top: 5mm;
                                justify-content: space-between;
                            }
                            .rcv-card {
                                border: 2px solid #000;
                                padding: 3mm;
                                width: 45%;
                                background: #f9f9f9;
                            }
                            .rcv-header {
                                background: #00bcd4;
                                color: white;
                                text-align: center;
                                padding: 2mm;
                                margin: -3mm -3mm 3mm -3mm;
                                font-weight: bold;
                                font-size: 10px;
                            }
                            .rcv-row {
                                display: flex;
                                margin-bottom: 1mm;
                                font-size: 7px;
                            }
                            .rcv-label {
                                font-weight: bold;
                                width: 25mm;
                            }
                            .rcv-value {
                                flex: 1;
                                border-bottom: 1px solid #000;
                                min-height: 3mm;
                            }
                            .clear {
                                clear: both;
                            }
                        </style>

                        <div class="talonario-container">
                            <!-- Logo y información de la empresa -->
                            <div style="position: relative; min-height: 80px;">
                                <div class="logo-section">
                                    <div class="logo-circle">
                                        La<br/>Venezolana<br/>de Seguros
                                    </div>
                                </div>
                                
                                <div class="control-box">
                                    <div class="control-row">
                                        <div class="control-label">Póliza:</div>
                                        <div class="control-value"><span t-field="poliza.numero_poliza"/></div>
                                    </div>
                                    <div class="control-row">
                                        <div class="control-label">Recibo:</div>
                                        <div class="control-value">000298</div>
                                    </div>
                                    <div class="control-row">
                                        <div class="control-label">Hoja:</div>
                                        <div class="control-value">1</div>
                                    </div>
                                    <div class="control-row">
                                        <div class="control-label">Agente:</div>
                                        <div class="control-value">14062015</div>
                                    </div>
                                </div>
                                
                                <div class="company-info">
                                    <div class="company-name">CUADRO PÓLIZA - RECIBO DE PRIMA</div>
                                </div>
                                <div class="clear"></div>
                            </div>

                            <!-- Sección de datos del tomador y asegurado -->
                            <div class="section-header">DATOS DEL TOMADOR Y ASEGURADO</div>
