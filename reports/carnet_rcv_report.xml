                                    <div class="data-value" style="width: 30mm;"><span t-field="poliza.telefono_asegurador"/></div>
                                </div>
                                <div class="data-row">
                                    <div class="data-label">Dirección:</div>
                                    <div class="data-value">URBI. LA ARBOLEDA CALLE LOS GRANDES SAN ANTONIO DE LOS ALTOS EDO MIRANDA</div>
                                    <div class="data-label" style="width: 15mm;">Email:</div>
                                    <div class="data-value" style="width: 30mm;">lavenezolana@gmail.com</div>
                                </div>
                            </div>

                            <!-- Sección de datos de la póliza -->
